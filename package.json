{
  "name": "brave-real-browser-mcp-server",
  "version": "2.1.4",
  "description": "MCP server for brave-real-browser",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "node scripts/auto-update.js || echo 'Auto-update check skipped'",
    "postinstall": "echo 'âœ… Installation complete with latest dependencies!'",
    "clean": "rimraf dist",
    "clean:cache": "npm cache clean --force",
    "fix-cache-permissions": "echo 'Run: sudo chown -R $(whoami):$(id -gn) ~/.npm' && echo 'This fixes npm cache permission issues'",
    "clean:modules": "rm -rf node_modules",
    "clean:all": "npm run clean:modules && npm run clean:cache && npm run clean",
    "update-brave-packages": "npm install brave-real-browser@latest brave-real-launcher@latest brave-real-puppeteer-core@latest --save --force",
    "ensure-latest-packages": "node scripts/ensure-latest-packages.js",
    "check-updates": "npm outdated || true",
    "upgrade-all": "node scripts/auto-update.js && echo 'ðŸ“¦ All dependencies updated to latest versions!'",
    "fresh-install": "npm run clean:all && npm install && npm run ensure-latest-packages",
    "fresh-start": "npm run fresh-install && npm run build && npm start",
    "fresh-dev": "npm run fresh-install && npm run build && npm run dev",
    "prebuild": "npm run clean",
    "build": "tsc",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/turndown": "^5.0.5",
    "brave-real-browser": "^1.5.102",
    "brave-real-launcher": "^1.2.15",
    "brave-real-puppeteer-core": "^24.23.0-patch.1",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "puppeteer",
    "browser-automation"
  ],
  "author": "withlinda13",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withLinda/brave-real-browser-mcp-server.git"
  },
  "homepage": "https://github.com/withLinda/brave-real-browser-mcp-server",
  "bugs": {
    "url": "https://github.com/withLinda/brave-real-browser-mcp-server/issues"
  },
  "bin": {
    "brave-real-browser-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
